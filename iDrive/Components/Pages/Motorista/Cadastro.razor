@page "/Motorista/Cadastro"


<body>
    <h1>Cadastro</h1>

    <p>Realize seu cadastro</p>

    <div class="mb-3">
        <div>Nome</div>
        <input type="text" class="form-control" placeholder="Digite seu nome" />
    </div>
    <div class="mb-3">
        <div>Sobrenome</div>
        <input type="text" class="form-control" placeholder="Digite seu sobrenome" />
    </div>
    <div class="mb-3">
        <div>Email</div>
        <input type="email" class="form-control" placeholder="Digite seu e-mail" />
    </div>
    <div class="mb-3">
        <div>Senha</div>
        <input type="password" class="form-control" placeholder="Crie uma senha" />
    </div>
    <div class="mb-3">
        <div>CPF</div>
        <input type="text" class="form-control" placeholder="Digite seu CPF" />
    </div>
    <div class="mb-3">
        <div>Celular</div>
        <input type="tel" class="form-control" placeholder="Digite seu número de celular" />
    </div>
    
    <form>
        <div class="input-wrapper mb-3">
            <label for="cnh" class="form-label">Envie sua habilitação</label>
            <div class="file-wrapper d-flex align-items-center gap-2">
                <div class="position-relative">
                    <button type="button" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-box-arrow-up"></i>
                        <span>Selecionar</span>
                    </button>
                    <input type="file" name="cnh" id="cnh" class="form-control-file"
                           style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                </div>
                <span class="file-name">Nenhum arquivo selecionado</span>
            </div>
        </div>

        <div class="input-wrapper mb-3">
            <label for="crlv" class="form-label">Envie o CRLV</label>
            <div class="file-wrapper d-flex align-items-center gap-2">
                <div class="position-relative">
                    <button type="button" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-box-arrow-up"></i>
                        <span>Selecionar</span>
                    </button>
                    <input type="file" name="crlv" id="crlv" class="form-control-file"
                           style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                </div>
                <span class="file-name">Nenhum arquivo selecionado</span>
            </div>
        </div>

       
        <div class="input-wrapper mb-3">
            <label for="residencia" class="form-label">Envie o comprovante de residência</label>
            <div class="file-wrapper d-flex align-items-center gap-2">
                <div class="position-relative">
                    <button type="button" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-box-arrow-up"></i>
                        <span>Selecionar</span>
                    </button>
                    <input type="file" name="residencia" id="residencia" class="form-control-file"
                           style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                </div>
                <span class="file-name">Nenhum arquivo selecionado</span>
            </div>
        </div>

       
        <div class="input-wrapper mb-3">
            <label for="ficha" class="form-label">Envie a ficha criminal</label>
            <div class="file-wrapper d-flex align-items-center gap-2">
                <div class="position-relative">
                    <button type="button" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-box-arrow-up"></i>
                        <span>Selecionar</span>
                    </button>
                    <input type="file" name="ficha" id="ficha" class="form-control-file"
                           style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                </div>
                <span class="file-name">Nenhum arquivo selecionado</span>
            </div>
        </div>

        
        <div class="input-wrapper mb-3">
            <label for="identidade" class="form-label">Envie o documento de identidade</label>
            <div class="file-wrapper d-flex align-items-center gap-2">
                <div class="position-relative">
                    <button type="button" class="btn btn-primary d-flex align-items-center gap-2">
                        <i class="bi bi-box-arrow-up"></i>
                        <span>Selecionar</span>
                    </button>
                    <input type="file" name="identidade" id="identidade" class="form-control-file"
                           style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                </div>
                <span class="file-name">Nenhum arquivo selecionado</span>
            </div>
        </div>


    </form>


    <a href="/Motorista/Home" class="btn btn-primary ms-3">Cadastrar</a>
</body>



